generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id       String   @id @default(cuid())
  username String
  email    String   @unique
  password String
  avatar   String?  @db.VarChar(255)
  bio      String? 
  sessions Session[]
  userprofile UserProfile[]
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime

  user      user     @relation(references: [id], fields: [userId], onDelete: Cascade)
}


model UserProfile {
  id       String   @id @default(cuid())
  user     user     @relation(fields: [id], references: [id], onDelete: Cascade)
  userBio  String 
  userConnections  Int
  userStatus  String

}